{
	"compilerOptions": {
		"noImplicitAny": false,
		"sourceMap": true,
		"target": "ES5",
		"jsx": "react",
		"module": "ES6",
		"moduleResolution": "node",
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"baseUrl": "src",
		"paths": {
			"ui/*": ["ui/*"],
			"core/*": ["core/*"],
			"data/*": ["data/*"],
			"assets/*": ["assets/*"],
			"root/*": ["*"],
			"components/*": ["components/*"],
			"irl-ui/*": ["irl-ui/*"],
			"util/*": ["util/*"],
			"styles/*": ["styles/*"],
			"services/*": ["services/*"],
			"icons/*": ["icons/*"],
		}
	},
	"exclude": [
		"dist",
		"node_modules"
	],
	"include": [
		"src"
	]
}
